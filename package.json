{
  "name": "kingdom",
  "version": "0.1.0",
  "main": "main.js",
  "author": {
    "name": "Joel Launder"
  },
  "description": "A smart card selector for Dominion",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently --kill-others \"electron .\" \"gulp watch\"",
    "serve": "gulp serve",
    "build": "gulp build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "joellaunder.kingdom",
    "productName": "Kingdom"
  },
  "consumedServices": {
    "atom-toolbar": {
      "versions": {
        "^1.0.0": "consumeToolbar"
      }
    }
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "concurrently": "^4.1.2",
    "electron": "^5.0.13",
    "electron-builder": "^20.44.4",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-minify": "^3.1.0",
    "gulp-sass": "^3.1.0",
    "gulp-serve": "^1.4.0",
    "gulp-uglify": "^3.0.2",
    "gulp-uglify-es": "^1.0.4",
    "gulp-wait": "0.0.2",
    "node-sass": "^4.13.1",
    "nodemon": "^1.19.4",
    "pump": "^3.0.0",
    "recursive-readdir": "^2.2.2"
  },
  "dependencies": {
    "glob": "^7.1.4"
  }
}
